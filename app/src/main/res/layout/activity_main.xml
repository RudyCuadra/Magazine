<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:layout_margin="16dp">

    <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Guía Vecinos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

    <LinearLayout
            android:id="@+id/LlElements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/txtTitulo">


        <EditText
                android:id="@+id/etNombre"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:hint="Nombre"
                android:textSize="20sp"/>

        <EditText
                android:id="@+id/etEdition"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNombre"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:hint="Edición"
                android:textSize="20sp"/>

        <EditText
                android:id="@+id/etMonth"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEdition"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:hint="Mes"
                android:textSize="20sp"/>


        <EditText
                android:id="@+id/etAge"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMonth"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:hint="Año"
                android:textSize="20sp"/>

        <Button
                android:id="@+id/btnLCover"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAge"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:hint="Cargar portada"/>

        <Button
                android:id="@+id/btnLPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargar PDF"
                android:layout_marginStart="20dp"/>

        <TextView
                android:id="@+id/txtpdfseleccionado"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

        android:text="Arcivho seleccionado"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/imgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#A7A7A7"
            android:layout_toRightOf="@+id/LlElements"
            android:layout_marginStart="50dp"
            android:layout_centerVertical="true"
    />

    <Button
            android:id="@+id/btnSaveMagazine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    <Button
            android:id="@+id/btnVerLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Lista"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>